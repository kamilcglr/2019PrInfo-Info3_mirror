<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXListCell?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<JFXListCell prefHeight="200.0" prefWidth="400.0" stylesheets="@styles/tweet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.tse.ProjetInfo3.mvc.controller.TweetController">
   <graphic>
      <GridPane prefHeight="400.0" prefWidth="215.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label fx:id="nbretweet" styleClass="nbrtlike" text="Nb retweet" GridPane.rowIndex="1">
               <graphic>
                  <FontIcon fx:id="RTicon" iconLiteral="fas-retweet" iconSize="20" />
               </graphic></Label>
            <Label fx:id="nbLikes" styleClass="nbrtlike" text="Nb like" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
               <graphic>
                  <FontIcon fx:id="Likeicon" iconLiteral="fas-heart" iconSize="20" />
               </graphic></Label>
            <Label fx:id="texttweet" text="Contenu Tweet" wrapText="true" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" />
         </children>
      </GridPane>
   </graphic>
</JFXListCell>
